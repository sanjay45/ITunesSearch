<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/songListFragment">

    <fragment
        android:id="@+id/songListFragment"
        android:name="com.sanjay.itunessearchapp.ui.song.SongListFragment"
        android:label="Songs"
        tools:layout="@layout/fragment_song_list" >
        <action
            android:id="@+id/action_songListFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/songDetailsFragment"
        android:name="com.sanjay.itunessearchapp.ui.song.SongDetailsFragment"
        android:label="Song Details"
        tools:layout="@layout/fragment_song_details" >
        <argument
            android:name="song"
            app:argType="com.sanjay.itunessearchapp.model.Song" />
    </fragment>
</navigation>